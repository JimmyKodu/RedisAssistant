<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RedisAssistant.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RedisAssistant.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Connections"
        ContentTemplate="{DataTemplate local:ConnectionsPage}"
        Route="ConnectionsPage" />

    <ShellContent
        Title="Keys"
        ContentTemplate="{DataTemplate local:KeysPage}"
        Route="KeysPage" />

    <ShellContent
        Title="Monitor"
        ContentTemplate="{DataTemplate local:MonitorPage}"
        Route="MonitorPage" />

</Shell>
